<p id="notice"><%= notice %></p>

<h1>Projetos</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Cliente</th>
      <th>Cor</th>
      <th>Status</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.client.name %></td>
        <td><%= project.color %></td>
        <td><%= project.status %></td>
        <td>
          <%= link_to 'Show', project, class: 'btn btn-info' %>
          <%= link_to 'Edit', edit_project_path(project), class: 'btn btn-warning' %>
          <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Projeto', new_project_path, class: 'btn btn-primary' %>
