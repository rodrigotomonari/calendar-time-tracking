<h1><%= t('app.projects') %></h1>

<p>
  <%= link_to t('projects.new'), new_project_path, class: 'btn btn-primary' %>
</p>

<table class="table table-striped table-bordered table-valign-center">
  <thead>
  <tr>
    <th><%= t('name') %></th>
    <th><%= t('app.client') %></th>
    <th><%= t('color') %></th>
    <th><%= t('status') %></th>
    <th></th>
  </tr>
  <tr class="js-table-filter">
    <th>
      <%= text_field_tag 'name', params[:name], class: 'form-control' %>
    </th>
    <th>
      <%= text_field_tag 'client', params[:client], class: 'form-control' %>
    </th>
    <th></th>
    <th>
      <%= select_tag 'status', options_for_select([[], ['Ativo', 'active'], ['Inativo', 'inactive']],
                                                  params[:status]), class: 'form-control' %>
    </th>
    <th>
      <button type="submit" class="btn btn-default"><%= t('filter') %></button>
      <div class="btn btn-default btn-reset"><%= t('reset') %></div>
    </th>
  </tr>
  </thead>

  <tbody>
  <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.client.name %></td>
        <td><%= project.color %></td>
        <td><%= project.status %></td>
        <td>
          <%= link_to t('edit'), edit_project_path(project), class: 'btn btn-sm btn-warning' %>
          <%= link_to t('delete'), project, method: :delete, data: { confirm: t('msg_confirm') },
                      class: 'btn btn-sm btn-danger' %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>




