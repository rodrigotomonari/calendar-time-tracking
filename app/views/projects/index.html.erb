<p id="notice"><%= notice %></p>

<h1>Projetos</h1>

<p>
  <%= link_to 'Novo Projeto', new_project_path, class: 'btn btn-primary' %>
</p>

<table class="table table-striped table-bordered table-valign-center">
  <thead>
  <tr>
    <th>Nome</th>
    <th>Cliente</th>
    <th>Cor</th>
    <th>Status</th>
    <th></th>
  </tr>
  <tr class="js-table-filter">
    <th>
      <%= text_field_tag 'name', params[:name], class: 'form-control' %>
    </th>
    <th>
      <%= text_field_tag 'client', params[:client], class: 'form-control' %>
    </th>
    <th></th>
    <th>
      <%= select_tag 'status', options_for_select([[], ['Ativo', 'active'], ['Inativo', 'inactive']], params[:status]), class: 'form-control' %>
    </th>
    <th>
      <button type="submit" class="btn btn-default">Filtar</button>
      <div class="btn btn-default btn-reset">Resetar</div>
    </th>
  </tr>
  </thead>

  <tbody>
  <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.client.name %></td>
        <td><%= project.color %></td>
        <td><%= project.status %></td>
        <td>
          <%= link_to 'Edit', edit_project_path(project), class: 'btn btn-sm btn-warning' %>
          <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>




