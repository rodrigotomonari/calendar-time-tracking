<h1>Usuários</h1>

<p>
  <%= link_to 'Novo Usuário', new_profile_path, class: 'btn btn-primary' %>
</p>

<table class="table table-striped table-bordered table-valign-center">
  <thead>
  <tr>
    <th>Nome</th>
    <th>Email</th>
    <th>Admin?</th>
    <th>Status</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.admin? %></td>
        <td><%= user.status %></td>
        <td>
          <%= link_to 'Editar', edit_profile_path(user), class: 'btn btn-info btn-sm' %>
          <%= link_to 'Remover', profile_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>


