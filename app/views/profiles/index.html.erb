<h1><%= t('users.list') %></h1>

<p>
  <%= link_to t('users.new'), new_profile_path, class: 'btn btn-primary' %>
</p>

<table class="table table-striped table-bordered table-valign-center">
  <thead>
  <tr>
    <th><%= t('name') %></th>
    <th><%= t('email') %></th>
    <th><%= t('is_admin') %></th>
    <th><%= t('notification_enabled') %></th>
    <th><%= t('slack_user') %></th>
    <th><%= t('status') %></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.admin? %></td>
      <td><%= user.notify_missing_tasks? %></td>
      <td><%= user.slackuser %></td>
      <td><%= user.status %></td>
      <td>
        <%= link_to t('edit'), edit_profile_path(user), class: 'btn btn-info btn-sm' %>
        <%= link_to t('delete'), profile_path(user), method: :delete, data: { confirm: t('msg_confirm') },
                    class: 'btn btn-danger btn-sm' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
