<h1><%= t('phases.list') %></h1>

<p>
  <%= link_to t('phases.new'), new_phase_path, class: 'btn btn-primary' %>
</p>

<table class="table table-striped table-bordered table-valign-center">
  <thead>
  <tr>
    <th><%= t('name') %></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @phases.each do |phase| %>
    <tr>
      <td><%= phase.name %></td>
      <td>
        <%= link_to t('edit'), edit_phase_path(phase), class: 'btn btn-info btn-sm' %>
        <%= link_to t('delete'), phase, method: :delete, data: { confirm: t('msg_confirm') },
                    class: 'btn btn-danger btn-sm' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
