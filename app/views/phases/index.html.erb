<h1>Fases</h1>

<p>
  <%= link_to 'Nova Fase', new_phase_path, class: 'btn btn-primary' %>
</p>

<table class="table table-striped table-bordered table-valign-center">
  <thead>
  <tr>
    <th>Nome</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @phases.each do |phase| %>
      <tr>
        <td><%= phase.name %></td>
        <td>
          <%= link_to 'Editar', edit_phase_path(phase), class: 'btn btn-info btn-sm' %>
          <%= link_to 'Remover', phase, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>


