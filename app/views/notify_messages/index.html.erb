<h1><%= t('messages.list') %></h1>

<p>
  <%= link_to t('messages.new'), new_notify_message_path, class: 'btn btn-primary' %>
</p>

<table class="table table-striped table-bordered table-valign-center">
  <thead>
  <tr>
    <th><%= t('app.message') %></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @notify_messages.each do |notify_messages| %>
      <tr>
        <td class="notify_messages_content"><%= raw notify_messages.message %></td>
        <td>
          <%= link_to t('edit'), edit_notify_message_path(notify_messages), class: 'btn btn-info btn-sm' %>
          <%= link_to t('delete'), notify_messages, method: :delete, data: { confirm: t('msg_confirm') },
                      class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
