<h1>Mensagens</h1>

<p>
  <%= link_to 'Nova Mensagem', new_notify_message_path, class: 'btn btn-primary' %>
</p>

<table class="table table-striped table-bordered table-valign-center">
  <thead>
  <tr>
    <th>Mensagem</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @notify_messages.each do |notify_messages| %>
      <tr>
        <td class="notify_messages_content"><%= raw notify_messages.message %></td>
        <td>
          <%= link_to 'Editar', edit_notify_message_path(notify_messages), class: 'btn btn-info btn-sm' %>
          <%= link_to 'Remover', notify_messages, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
