<%= simple_form_for(@notify_message) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :message %>
    </div>

    <ul>
        <li>%%username%% | <%= t('notify_messages.replace_username') %></li>
        <li>%%date%% | <%= t('notify_messages.replace_date') %> </li>
    </ul>

    <br>

    <div class="form-actions">
      <%= f.button :submit, class: 'btn btn-primary' %>
      <%= link_to t('back'), notify_messages_path, class: 'btn btn-default' %>
    </div>
<% end %>


