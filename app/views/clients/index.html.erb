<h1><%= t('clients.list') %></h1>

<p>
  <%= link_to t('clients.new'), new_client_path, class: 'btn btn-primary' %>
</p>

<table class="table table-striped table-bordered table-valign-center">
  <thead>
  <tr>
    <th><%= t('name') %></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @clients.each do |client| %>
    <tr>
      <td><%= client.name %></td>
      <td>
        <%= link_to t('edit'), edit_client_path(client), class: 'btn btn-info btn-sm' %>
        <%= link_to t('delete'), client, method: :delete, data: { confirm: t('msg_confirm') },
                    class: 'btn btn-danger btn-sm' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
