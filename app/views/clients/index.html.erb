<h1>Clientes</h1>

<p>
  <%= link_to 'Novo Cliente', new_client_path, class: 'btn btn-primary' %>
</p>

<table class="table table-striped table-bordered table-valign-center">
  <thead>
  <tr>
    <th>Nome</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td>
          <%= link_to 'Editar', edit_client_path(client), class: 'btn btn-info btn-sm' %>
          <%= link_to 'Remover', client, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>


